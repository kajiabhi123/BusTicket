<?xml version="1.0" encoding="utf-8"?>
<set  android:duration="2000" xmlns:android="http://schemas.android.com/apk/res/android">

    <alpha
        android:fromAlpha="0"
        android:toAlpha="1"
        />
    <rotate android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="360"/>

    <scale android:fromXScale="0.1"  android:fromYScale="0.1"
        android:toXScale="100%"
        android:toYScale="100%"
        android:pivotX="50%"
        android:pivotY="50%"/>

    <translate android:fromXDelta="0" android:fromYDelta="100%"/>


</set>