<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.busticket.busticket">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/splash"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/splash"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".Login" />
        <activity android:name=".menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".signup" />
        <activity android:name=".seat_layout" />
        <activity android:name=".AnimatonActivity" />
        <activity android:name=".TicketLayout" />
        <activity android:name=".SelectDateActivity" />
        <activity android:name=".BusTime" />
        <activity
            android:name=".BookSeatActivity"
            android:label="@string/title_activity_book_seat"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>